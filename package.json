{
	"name": "twdiw-chat",
	"version": "1.1.0",
	"description": "Token-gated forum and matching platform with VC verification",
	"type": "module",
	"scripts": {
		"dev": "npm run build:frontend && wrangler dev",
		"deploy": "npm run build:frontend && wrangler deploy --minify",
		"build:frontend": "cd frontend && npm install && npm run build && cd .. && cp -r frontend/dist/* public/",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"db:migrate:local": "wrangler d1 migrations apply twdiw-chat-db --local",
		"db:migrate:remote": "wrangler d1 migrations apply twdiw-chat-db --remote",
		"test": "vitest"
	},
	"dependencies": {
		"hono": "^4.10.4",
		"uuid": "^13.0.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240512.0",
		"@types/uuid": "^10.0.0",
		"typescript": "^5.4.5",
		"vitest": "^4.0.13",
		"wrangler": "^4.46.0"
	}
}
